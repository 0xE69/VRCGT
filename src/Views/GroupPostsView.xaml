<UserControl x:Class="VRCGroupTools.Views.GroupPostsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#252526" CornerRadius="8" Padding="16" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="ðŸ“® Group Posts" FontSize="20" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="{Binding Status}" Foreground="#7C4DFF" FontSize="12" Margin="0,5,0,0"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="ðŸ”„ Refresh" 
                            Command="{Binding LoadPostsCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="White"
                            Height="36" Margin="0,0,10,0"/>
                    <Button Content="âž• New Post" 
                            Command="{Binding ToggleCreatePanelCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#7C4DFF"
                            Height="36"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Create/Edit Panel -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="16" Margin="0,0,0,15"
                Visibility="{Binding ShowCreatePanel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel>
                <TextBlock FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Text" Value="Create New Post"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                    <Setter Property="Text" Value="Edit Post"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
                
                <TextBox Text="{Binding PostTitle, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Post Title"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="White" CaretBrush="White"
                         Margin="0,0,0,10"/>
                
                <TextBox Text="{Binding PostText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Post Content"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="White" CaretBrush="White"
                         AcceptsReturn="True" TextWrapping="Wrap"
                         Height="100" Margin="0,0,0,10"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="Visibility" Foreground="#888" FontSize="11" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding VisibilityOptions}"
                                  SelectedItem="{Binding PostVisibility}"
                                  Width="120"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Foreground="White"/>
                    </StackPanel>
                    <CheckBox Content="Send Notification" 
                              IsChecked="{Binding SendNotification}"
                              Foreground="White"
                              VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding CreatePostCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#7C4DFF"
                            Height="36" Width="120"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                        <Button.Content>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="Create Post"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                <Setter Property="Text" Value="Update Post"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button.Content>
                    </Button>
                    <Button Content="Cancel" 
                            Command="{Binding CancelEditCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Foreground="White"
                            Height="36" Margin="10,0,0,0"/>
                    <ProgressBar IsIndeterminate="True" Width="24" Height="24" Margin="15,0,0,0"
                                 Style="{StaticResource MaterialDesignCircularProgressBar}"
                                 Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Posts List -->
        <Border Grid.Row="2" Background="#252526" CornerRadius="8" Padding="10">
            <Grid>
                <!-- Loading Spinner -->
                <ProgressBar IsIndeterminate="True" Width="50" Height="50"
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Posts ScrollViewer -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Posts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E1E1E" CornerRadius="6" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <TextBlock Text="{Binding VisibilityIcon}" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Title}" FontSize="15" FontWeight="SemiBold" 
                                                           Foreground="White" TextWrapping="Wrap"/>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding Text}" Foreground="#BBB" FontSize="13"
                                                       TextWrapping="Wrap" MaxHeight="60"
                                                       TextTrimming="CharacterEllipsis" Margin="0,0,0,8"/>
                                            
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding CreatedAt}" Foreground="#666" FontSize="11"/>
                                                <TextBlock Text=" â€¢ " Foreground="#444"/>
                                                <TextBlock Text="{Binding Visibility}" Foreground="#7C4DFF" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                            <Button Content="âœï¸" ToolTip="Edit"
                                                    Command="{Binding DataContext.EditPostCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Foreground="#7C4DFF" Width="36" Height="36"/>
                                            <Button Content="ðŸ—‘ï¸" ToolTip="Delete"
                                                    Command="{Binding DataContext.DeletePostAsyncCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding Id}"
                                                    Style="{StaticResource MaterialDesignIconButton}"
                                                    Foreground="#FF6B6B" Width="36" Height="36"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <TextBlock Text="No posts yet. Click 'Refresh' to load posts or 'New Post' to create one."
                           Foreground="#666" FontSize="14" TextWrapping="Wrap" TextAlignment="Center"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding Posts.Count, Converter={StaticResource ZeroToVisibilityConverter}}"/>
            </Grid>
        </Border>

        <!-- Load More Button -->
        <Button Grid.Row="3" Content="ðŸ“œ Load More Posts" 
                Command="{Binding LoadMoreCommand}"
                Style="{StaticResource MaterialDesignOutlinedButton}"
                Foreground="White"
                HorizontalAlignment="Center"
                Height="36" Margin="0,15,0,0"
                Visibility="{Binding CanLoadMore, Converter={StaticResource BooleanToVisibilityConverter}}"
                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"/>
    </Grid>
</UserControl>
