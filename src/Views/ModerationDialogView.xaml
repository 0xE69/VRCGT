<Window x:Class="VRCGroupTools.Views.ModerationDialogView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Moderation Action"
        Height="700"
        Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E"
        ResizeMode="NoResize"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock FontSize="24" FontWeight="Bold" Margin="0,0,0,10">
                <Run Text="{Binding ActionTypeDisplay, Mode=OneWay}"/>
                <Run Text=" User"/>
            </TextBlock>
            <TextBlock FontSize="14" Foreground="#AAA">
                <Run Text="Target: "/>
                <Run Text="{Binding TargetDisplayName, Mode=OneWay}" FontWeight="SemiBold" Foreground="White"/>
            </TextBlock>
        </StackPanel>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <!-- Infraction History Card -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Infraction History" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Total Warnings" Foreground="#FFC107" FontSize="11" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding InfractionHistory.TotalWarnings}" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Total Kicks" Foreground="#FF9800" FontSize="11" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding InfractionHistory.TotalKicks}" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Total Bans" Foreground="#F44336" FontSize="11" Margin="0,0,0,3"/>
                                <TextBlock Text="{Binding InfractionHistory.TotalBans}" FontSize="20" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                        
                        <Separator Margin="0,10" Background="#444"/>
                        
                        <!-- For Selected Reason -->
                        <StackPanel Visibility="{Binding ShowReasonSpecificCounts, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock Text="For Selected Reason:" Foreground="#AAA" FontSize="11" Margin="0,0,0,5"/>
                            <TextBlock Foreground="#CCC" FontSize="12">
                                <Run Text="Warnings: "/>
                                <Run Text="{Binding InfractionHistory.WarningsForReason}" FontWeight="SemiBold"/>
                                <Run Text="  |  Kicks: "/>
                                <Run Text="{Binding InfractionHistory.KicksForReason}" FontWeight="SemiBold"/>
                                <Run Text="  |  Bans: "/>
                                <Run Text="{Binding InfractionHistory.BansForReason}" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>
                        
                        <StackPanel Margin="0,5,0,0">
                            <TextBlock Foreground="#AAA" FontSize="11">
                                <Run Text="Active Warnings (Last 30 Days): "/>
                                <Run Text="{Binding InfractionHistory.WarningsLastMonth}" Foreground="{Binding WarningCountColor}" FontWeight="SemiBold"/>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Reason Selection -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Reason *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding AvailableReasons}"
                                  SelectedItem="{Binding SelectedReason}"
                                  FontSize="13"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    </StackPanel>
                </Border>
                
                <!-- Duration Selection (for bans/kicks) -->
                <Border Background="#2D2D30" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,0,0,15"
                        Visibility="{Binding ShowDurationPicker, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Duration *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <ComboBox ItemsSource="{Binding AvailableDurations}"
                                  SelectedItem="{Binding SelectedDuration}"
                                  DisplayMemberPath="Label"
                                  FontSize="13"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                        
                        <TextBlock Text="â° Expires At:" Foreground="#AAA" FontSize="11" Margin="0,10,0,5"
                                   Visibility="{Binding ShowExpirationDate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding ExpirationDateDisplay}" 
                                   Foreground="#4CAF50" 
                                   FontSize="12"
                                   Visibility="{Binding ShowExpirationDate, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    </StackPanel>
                </Border>
                
                <!-- Description -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="Additional Description (Optional)" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 Height="100"
                                 VerticalScrollBarVisibility="Auto"
                                 materialDesign:HintAssist.Hint="Add any additional context or notes..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                        <TextBlock Text="{Binding Description.Length}" 
                                   Foreground="#666" 
                                   FontSize="10" 
                                   HorizontalAlignment="Right"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Recent History -->
                <Border Background="#2D2D30" CornerRadius="8" Padding="15"
                        Visibility="{Binding HasRecentActions, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“œ Recent Actions" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding InfractionHistory.RecentActions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252526" 
                                            CornerRadius="4" 
                                            Padding="10" 
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock FontSize="12">
                                                <Run Text="{Binding ActionType, Mode=OneWay}" 
                                                     FontWeight="SemiBold"
                                                     Foreground="{Binding ActionType, Converter={StaticResource ActionTypeToColorConverter}}"/>
                                                <Run Text=" - "/>
                                                <Run Text="{Binding Reason, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding ActionTime, StringFormat='MMM dd, yyyy HH:mm'}" 
                                                       Foreground="#888" 
                                                       FontSize="10"
                                                       Margin="0,3,0,0"/>
                                            <TextBlock Text="{Binding Description}" 
                                                       Foreground="#AAA" 
                                                       FontSize="11"
                                                       TextWrapping="Wrap"
                                                       Margin="0,3,0,0"
                                                       Visibility="{Binding Description, Converter={StaticResource NullToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancel"
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Height="36"
                    Margin="0,0,10,0"
                    Style="{StaticResource MaterialDesignOutlinedButton}"/>
            <Button Content="{Binding ConfirmButtonText}"
                    Command="{Binding ConfirmCommand}"
                    Width="120"
                    Height="36"
                    Style="{StaticResource MaterialDesignRaisedButton}">
                <Button.Background>
                    <SolidColorBrush Color="{Binding ConfirmButtonColor}"/>
                </Button.Background>
            </Button>
        </StackPanel>
    </Grid>
</Window>
