<UserControl x:Class="VRCGroupTools.Views.MembersListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Members" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
            <TextBlock Text="View all members in the selected group." Foreground="#AAA" FontSize="12"/>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Refresh"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}" Height="32" Width="100"/>
                <TextBox Text="{Binding Filter, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Filter by name or userId"
                         Width="220"
                         Margin="10,0,0,0"
                         Style="{StaticResource MaterialDesignFilledTextBox}"
                         Foreground="White" CaretBrush="White"/>
                <ComboBox ItemsSource="{Binding RoleFilters}"
                          SelectedItem="{Binding SelectedRole}"
                          Width="140"
                          Margin="10,0,0,0"
                          Style="{StaticResource MaterialDesignFilledComboBox}"
                          Foreground="White"/>
                <TextBlock Text="{Binding Status}" Foreground="#7C4DFF" Margin="10,6,0,0"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding FilteredMembers}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Background="#1f1f1f"
                  RowBackground="#2b2b2b"
                  AlternatingRowBackground="#242424"
                  Foreground="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="*"/>
                <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="2*"/>
                <DataGridTextColumn Header="Joined" Binding="{Binding JoinedAt}" Width="*"/>
                <DataGridTextColumn Header="Roles" Binding="{Binding RoleSummary}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
