<UserControl x:Class="VRCGroupTools.Views.GameLogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:VRCGroupTools.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:GameLogViewModel}"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="ðŸ“œ Game Log - Last Seen Users" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"/>
            <TextBlock Text="View and invite users you've recently encountered in VRChat" 
                      Foreground="#888" 
                      FontSize="13" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Search and Filters -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="ðŸ” Search by name..."
                        Foreground="White"
                        CaretBrush="White"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Width="250"
                        Margin="0,0,10,0"/>

                <CheckBox Grid.Column="1" 
                         Content="18+ Only" 
                         IsChecked="{Binding Only18Plus}"
                         Foreground="White"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>

                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <TextBlock Text="ðŸ“Š " Foreground="#888" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalUsersFound, StringFormat='Found {0} users'}" 
                              Foreground="#888" 
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                </StackPanel>

                <Button Grid.Column="4"
                       Content="ðŸ”„ Scan Game Log"
                       Command="{Binding ScanGameLogCommand}"
                       ToolTip="Scan VRChat game logs for recently seen users"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="#7C4DFF"
                       Width="160"
                       Height="36"/>
            </Grid>
        </Border>

        <!-- Users List -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="8">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0"
                                IsIndeterminate="True"
                                Width="40" Height="40"
                                Foreground="#7C4DFF"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                              Foreground="#888" 
                              Margin="0,10,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                        <Condition Binding="{Binding FilteredUsers.Count}" Value="0"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="ðŸ“œ" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="No users found" 
                              FontSize="16" 
                              Foreground="#888"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Click 'Scan Game Log' to load recently seen users" 
                              Foreground="#666" 
                              FontSize="12" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Users List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <ItemsControl ItemsSource="{Binding FilteredUsers}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" 
                                       CornerRadius="6" 
                                       Padding="10" 
                                       Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Selection Checkbox -->
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}"
                                                 IsEnabled="{Binding HasUserId}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                                        <!-- Avatar -->
                                        <Border Grid.Column="1" 
                                               Width="40" Height="40" 
                                               CornerRadius="20" 
                                               Background="#1E1E1E" 
                                               ClipToBounds="True">
                                            <Grid>
                                                <TextBlock Text="ðŸ‘¤" 
                                                          FontSize="20" 
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"
                                                          Visibility="{Binding User.ProfilePicUrl, Converter={StaticResource EmptyStringToVisibilityConverter}}"/>
                                                <Image Source="{Binding User.ProfilePicUrl}" 
                                                      Stretch="UniformToFill"/>
                                            </Grid>
                                        </Border>

                                        <!-- User Info -->
                                        <StackPanel Grid.Column="2" 
                                                   Margin="10,0,10,0" 
                                                   VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding User.DisplayName}" 
                                                          Foreground="White" 
                                                          FontWeight="SemiBold" 
                                                          FontSize="14"/>
                                                
                                                <!-- 18+ Badge -->
                                                <TextBlock Text=" ðŸ”ž" 
                                                          FontSize="12"
                                                          VerticalAlignment="Center"
                                                          Visibility="{Binding User.IsAgeVerified, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                
                                                <!-- No User ID Warning -->
                                                <TextBlock Text=" âš ï¸" 
                                                          FontSize="12"
                                                          VerticalAlignment="Center"
                                                          ToolTip="User ID not resolved - cannot send invite"
                                                          Visibility="{Binding HasUserId, Converter={StaticResource InverseBoolToVisConverter}}"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="Last seen: " 
                                                          Foreground="#666"
                                                          FontSize="11"/>
                                                <TextBlock Text="{Binding LastSeenDisplay}" 
                                                          Foreground="#888"
                                                          FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Trust Level Badge -->
                                        <Border Grid.Column="3"
                                               Background="{Binding TrustLevelBrush}"
                                               CornerRadius="4"
                                               Padding="8,4"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"
                                               Opacity="0.9">
                                            <TextBlock Text="{Binding TrustLevel}" 
                                                      Foreground="White" 
                                                      FontSize="10" 
                                                      FontWeight="Bold"/>
                                        </Border>

                                        <!-- Quick Invite Button -->
                                        <Button Grid.Column="5"
                                               Content="ðŸ“¨"
                                               ToolTip="Quick invite to group"
                                               Style="{StaticResource MaterialDesignIconButton}"
                                               Foreground="#7C4DFF"
                                               Width="32" Height="32"
                                               IsEnabled="{Binding HasUserId}"
                                               Command="{Binding DataContext.InviteToGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                               Visibility="Collapsed"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Border Grid.Row="3" 
               Background="#252526" 
               CornerRadius="8"
               Padding="15"
               Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selection Controls -->
                <Button Grid.Column="0"
                       Content="Select All" 
                       Command="{Binding SelectAllCommand}"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Foreground="#7C4DFF"/>
                <Button Grid.Column="1"
                       Content="Deselect All" 
                       Command="{Binding DeselectAllCommand}"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Foreground="#7C4DFF"/>

                <!-- Selected Count -->
                <TextBlock Grid.Column="2" 
                          Text="{Binding SelectedCount, StringFormat='{}{0} selected'}"
                          Foreground="#888"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="13"/>

                <!-- Invite Button -->
                <Button Grid.Column="3" 
                       Content="ðŸ“¨ Invite to Group" 
                       Command="{Binding InviteToGroupCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="#4CAF50"
                       Height="36"
                       Padding="15,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
