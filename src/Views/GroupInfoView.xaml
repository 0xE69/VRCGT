<UserControl x:Class="VRCGroupTools.Views.GroupInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
            <Button Content="Refresh" Command="{Binding RefreshCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}" Height="32" Width="100"/>
            <TextBlock Text="{Binding Status}" Foreground="#7C4DFF" Margin="10,6,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="#1f1f1f" Padding="12" CornerRadius="6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Group Information" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="{Binding ShortCode, StringFormat=Code: {0}}" Foreground="#aaa"/>
                    <TextBlock Text="{Binding Privacy, StringFormat=Privacy: {0}}" Foreground="#aaa"/>
                    <TextBlock Text="{Binding OwnerId, StringFormat=Owner: {0}}" Foreground="#aaa"/>
                    <TextBlock Text="{Binding MemberCount, StringFormat=Members: {0}}" Foreground="#aaa"/>
                    <TextBlock Text="{Binding OnlineCount, StringFormat=Online: {0}}" Foreground="#aaa"/>
                    <TextBlock Text="Description" Foreground="#888" FontSize="12"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" Foreground="White"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <Image Source="{Binding IconUrl}" Height="120" Stretch="Uniform" Margin="0,0,0,6"/>
                    <Image Source="{Binding BannerUrl}" Height="120" Stretch="Uniform"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
