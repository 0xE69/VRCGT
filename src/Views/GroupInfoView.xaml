<UserControl x:Class="VRCGroupTools.Views.GroupInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#1E1E1E">
        <StackPanel Margin="20">

            <!-- Header with Refresh -->
            <DockPanel Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Content="âŸ³ Refresh" 
                        Command="{Binding RefreshCommand}" 
                        Width="100" Height="32" 
                        Background="#7C4DFF" Foreground="White" 
                        FontWeight="SemiBold"/>
                    <Button Content="Load Cached" 
                        Command="{Binding LoadFromCacheCommand}" 
                        Width="110" Height="32"
                        Margin="10,0,0,0"/>
                </StackPanel>
                <TextBlock Text="Loading..." 
                           Foreground="#7C4DFF" 
                           FontSize="14"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FF5252" 
                           FontSize="13"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"/>
            </DockPanel>

            <!-- Main Card -->
            <Border Background="#252526" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Icon -->
                    <Border Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Width="100" Height="100" Margin="0,0,20,0">
                        <Border CornerRadius="12" ClipToBounds="True">
                            <Image Source="{Binding IconUrl}" Stretch="UniformToFill"/>
                        </Border>
                    </Border>

                    <!-- Name and ID -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Name}" 
                                   Foreground="White" 
                                   FontSize="26" 
                                   FontWeight="Bold"
                                   TextWrapping="Wrap"/>
                        <TextBlock Text="{Binding GroupId}" 
                                   Foreground="#888" 
                                   FontSize="12"
                                   Margin="0,4,0,0"/>
                        <TextBlock Margin="0,8,0,0">
                            <Hyperlink NavigateUri="{Binding GroupUrl}" 
                                       RequestNavigate="Hyperlink_RequestNavigate"
                                       Foreground="#7C4DFF">
                                <Run Text="Open in VRChat"/>
                            </Hyperlink>
                        </TextBlock>
                    </StackPanel>

                    <!-- Banner -->
                    <Border Grid.Column="2" Background="#1E1E1E" CornerRadius="12" Width="200" Height="100">
                        <Border CornerRadius="12" ClipToBounds="True">
                            <Image Source="{Binding BannerUrl}" Stretch="UniformToFill"/>
                        </Border>
                    </Border>
                </Grid>
            </Border>

            <!-- Stats Cards -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Members -->
                <Border Grid.Column="0" Background="#252526" CornerRadius="10" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Members" Foreground="#888" FontSize="12"/>
                        <TextBlock Text="{Binding MemberCount}" 
                                   Foreground="White" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Online with green dot -->
                <Border Grid.Column="1" Background="#252526" CornerRadius="10" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" Fill="#4CAF50" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Online" Foreground="#888" FontSize="12"/>
                        </StackPanel>
                        <TextBlock Text="{Binding OnlineCount}" 
                                   Foreground="#4CAF50" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Created -->
                <Border Grid.Column="2" Background="#252526" CornerRadius="10" Padding="16" Margin="0,0,8,0">
                    <StackPanel>
                        <TextBlock Text="Created" Foreground="#888" FontSize="12"/>
                        <TextBlock Text="{Binding CreatedAt}" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Joined -->
                <Border Grid.Column="3" Background="#252526" CornerRadius="10" Padding="16">
                    <StackPanel>
                        <TextBlock Text="You Joined" Foreground="#888" FontSize="12"/>
                        <TextBlock Text="{Binding JoinedAt}" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Description Card -->
            <Border Background="#252526" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="Description" Foreground="#888" FontSize="12" Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding Description}" 
                               Foreground="#ccc" 
                               FontSize="14"
                               TextWrapping="Wrap"
                               LineHeight="22"/>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>
</UserControl>
