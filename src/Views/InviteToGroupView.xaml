<UserControl x:Class="VRCGroupTools.Views.InviteToGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="Transparent">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <StackPanel Grid.Column="0">
            <!-- Header -->
            <TextBlock Text="ðŸ“¨ Invite To Group" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Search for a VRChat user, click to view their profile, then send an invite." 
                       Foreground="#888" FontSize="12" Margin="0,5,0,15"/>

            <!-- Search Box -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="ðŸ” Search by username or User ID..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Foreground="White" CaretBrush="White"
                         IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Return" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <Button Grid.Column="1"
                        Content="Search"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                        Background="#7C4DFF"
                        Height="40" Width="100" Margin="10,0,0,0"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
            </Grid>

            <!-- Loading Indicator -->
            <ProgressBar IsIndeterminate="True" 
                         Height="4" 
                         Foreground="#7C4DFF"
                         Margin="0,5,0,5"
                         Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <!-- Search Results -->
            <Border Background="#2D2D30" CornerRadius="8" Padding="10" MinHeight="200" MaxHeight="400">
                <Grid>
                    <!-- Empty State -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                                Visibility="{Binding SearchResults.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                        <TextBlock Text="ðŸ”" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBlock Text="Search for users above" Foreground="#888" HorizontalAlignment="Center"/>
                        <TextBlock Text="Click on a user to view their profile" Foreground="#666" FontSize="11" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Results List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl ItemsSource="{Binding SearchResults}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#3D3D40" Padding="10" CornerRadius="6" Margin="0,0,0,8" Cursor="Hand">
                                        <Border.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" 
                                                          Command="{Binding DataContext.ViewUserProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding}"/>
                                        </Border.InputBindings>
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#4D4D50"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Avatar -->
                                            <Border Width="45" Height="45" CornerRadius="22" Background="#2A2A2A" ClipToBounds="True" Grid.Column="0">
                                                <Image Source="{Binding ProfilePicUrl}" Stretch="UniformToFill"/>
                                            </Border>

                                            <!-- User Info -->
                                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding DisplayName}" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                                                <TextBlock Text="{Binding UserId}" Foreground="#888" FontSize="10"/>
                                                <TextBlock Text="{Binding StatusDescription}" Foreground="#666" FontSize="11" 
                                                           TextTrimming="CharacterEllipsis" MaxWidth="250"
                                                           Visibility="{Binding StatusDescription, Converter={StaticResource NullToVisibilityConverter}}"/>
                                            </StackPanel>

                                            <!-- Quick Use Button -->
                                            <Button Grid.Column="2" Content="Use" 
                                                    Command="{Binding DataContext.UseUserCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                                                    Height="28" Width="60" 
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Manual User ID Entry -->
            <Border Background="#252526" CornerRadius="8" Padding="15" Margin="0,15,0,0">
                <StackPanel>
                    <TextBlock Text="Send Invite" Foreground="White" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding UserId, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="User ID (usr_xxxxxxxx-xxxx-xxxx)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Foreground="White" CaretBrush="White"/>
                        <Button Grid.Column="1"
                                Content="Send Invite"
                                Command="{Binding SendInviteCommand}"
                                Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                                Background="#4CAF50"
                                Height="40" Width="120" Margin="10,0,0,0"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Status -->
            <TextBlock Text="{Binding Status}" Foreground="#7C4DFF" Margin="0,10,0,0" FontSize="13"/>
        </StackPanel>

        <!-- User Profile Panel -->
        <Border Grid.Column="1" 
                Width="350"
                Background="#252526"
                CornerRadius="8"
                Margin="20,0,0,0"
                Padding="15"
                Visibility="{Binding ShowUserPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="User Profile" Foreground="White" FontWeight="SemiBold" FontSize="14" VerticalAlignment="Center"/>
                    <Button Content="âœ•"
                            HorizontalAlignment="Right"
                            Command="{Binding CloseUserPanelCommand}"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Foreground="#888"
                            Width="30" Height="30"/>
                </Grid>
                
                <!-- Profile Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Loading -->
                        <ProgressBar IsIndeterminate="True" 
                                     Margin="0,20,0,0"
                                     Visibility="{Binding IsLoadingProfile, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        
                        <!-- Profile Info -->
                        <StackPanel Visibility="{Binding IsLoadingProfile, Converter={StaticResource InverseBoolToVisConverter}}">
                            <!-- Avatar -->
                            <Border Width="100" Height="100" CornerRadius="50" 
                                    HorizontalAlignment="Center" Margin="0,10,0,15"
                                    Background="#3A3A3A" ClipToBounds="True">
                                <Image Source="{Binding SelectedUserProfile.ProfilePicUrl}" Stretch="UniformToFill"/>
                            </Border>
                            
                            <!-- Display Name -->
                            <TextBlock Text="{Binding SelectedUserProfile.DisplayName}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       TextAlignment="Center"/>
                            
                            <!-- User ID -->
                            <TextBlock Text="{Binding SelectedUserProfile.UserId}"
                                       Foreground="#666"
                                       FontSize="10"
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>
                            
                            <!-- Age Verification Badge -->
                            <Border CornerRadius="12"
                                    Padding="12,5"
                                    HorizontalAlignment="Center"
                                    Margin="0,12,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="#F44336"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedUserProfile.IsAgeVerified}" Value="True">
                                                <Setter Property="Background" Value="#4CAF50"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Foreground="White" FontSize="12" FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="âŒ Not Age Verified"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding SelectedUserProfile.IsAgeVerified}" Value="True">
                                                    <Setter Property="Text" Value="âœ“ Age Verified"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Border>
                            
                            <!-- Bio -->
                            <Border Background="#1E1E1E" 
                                    CornerRadius="8" 
                                    Padding="12"
                                    Margin="0,15,0,0"
                                    Visibility="{Binding SelectedUserProfile.Bio, Converter={StaticResource NullToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Bio" Foreground="#888" FontSize="11" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding SelectedUserProfile.Bio}"
                                               Foreground="#CCC"
                                               TextWrapping="Wrap"
                                               MaxHeight="120"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Badges -->
                            <Border Background="#1E1E1E" 
                                    CornerRadius="8" 
                                    Padding="12"
                                    Margin="0,12,0,0"
                                    Visibility="{Binding HasBadges, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Badges" Foreground="#888" FontSize="11" Margin="0,0,0,8"/>
                                    <ItemsControl ItemsSource="{Binding SelectedUserProfile.Badges}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#3D3D40" CornerRadius="4" Padding="6,3" Margin="0,0,5,5">
                                                    <TextBlock Text="{Binding}" Foreground="#CCC" FontSize="11"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>
                            
                            <!-- Invite Action -->
                            <Border Background="#1E1E1E" 
                                    CornerRadius="8" 
                                    Padding="12"
                                    Margin="0,15,0,0">
                                <StackPanel>
                                    <TextBlock Text="Invite to Group" Foreground="#888" FontSize="11" Margin="0,0,0,10"/>
                                    <Button Content="ðŸ“¨ Send Group Invite"
                                            Command="{Binding SendInviteToSelectedUserCommand}"
                                            Height="40"
                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                            Background="#7C4DFF"
                                            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
