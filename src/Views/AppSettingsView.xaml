<UserControl x:Class="VRCGroupTools.Views.AppSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Application Settings" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
            <TextBlock Text="Configure your VRC Group Tools experience" Foreground="#AAA" FontSize="13" Margin="0,0,0,20"/>

            <!-- Language & Translation Section -->
            <Border Background="#2A2A2A" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸŒ Language &amp; Translation" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Language" Foreground="#AAA" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding SelectedLanguage}"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Foreground="White"
                              Margin="0,0,0,10"/>
                    
                    <CheckBox Content="ðŸ¤– Auto-translate using AI (Top 10 languages)"
                              IsChecked="{Binding AutoTranslateEnabled}"
                              Foreground="White"
                              Style="{StaticResource MaterialDesignCheckBox}"/>
                    <TextBlock Text="Automatically translate interface text to your selected language using AI" 
                               Foreground="#777" 
                               FontSize="11" 
                               Margin="30,2,0,0" 
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- Appearance Section -->
            <Border Background="#2A2A2A" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸŽ¨ Appearance" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Theme" Foreground="#AAA" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Themes}"
                              SelectedItem="{Binding SelectedTheme}"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Foreground="White"
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Text="UI Zoom Level" Foreground="#AAA" FontSize="12" Margin="0,0,0,3"/>
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Slider Grid.Column="0"
                                Value="{Binding UiZoom}"
                                Minimum="0.75"
                                Maximum="1.5"
                                TickFrequency="0.05"
                                IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"
                                Style="{StaticResource MaterialDesignSlider}"/>
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding UiZoom, StringFormat={}{0:P0}}" 
                                   Foreground="White" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   FontSize="14"/>
                    </Grid>
                    
                    <CheckBox Content="ðŸ“ Show tray notification indicator"
                              IsChecked="{Binding ShowTrayNotificationDot}"
                              Foreground="White"
                              Style="{StaticResource MaterialDesignCheckBox}"/>
                </StackPanel>
            </Border>

            <!-- Regional Settings Section -->
            <Border Background="#2A2A2A" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸŒ Regional Settings" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Time Zone" Foreground="#AAA" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding TimeZones}"
                              SelectedItem="{Binding SelectedTimeZoneId}"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Foreground="White"
                              Margin="0,0,0,10"
                              IsTextSearchEnabled="True"/>

                    <TextBlock Text="Default Region" Foreground="#AAA" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding Regions}"
                              SelectedItem="{Binding DefaultRegion}"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Foreground="White"
                              Margin="0,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Application Behavior Section -->
            <Border Background="#2A2A2A" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ Application Behavior" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                    
                    <CheckBox Content="ðŸš€ Start with Windows"
                              IsChecked="{Binding StartWithWindows}"
                              Foreground="White"
                              Margin="0,0,0,8"
                              Style="{StaticResource MaterialDesignCheckBox}"/>
                    
                    <CheckBox Content="ðŸ”½ Start minimized"
                              IsChecked="{Binding StartMinimized}"
                              Foreground="White"
                              Margin="0,0,0,8"
                              Style="{StaticResource MaterialDesignCheckBox}"/>
                    
                    <CheckBox Content="ðŸ“Œ Minimize to tray when closing"
                              IsChecked="{Binding MinimizeToTray}"
                              Foreground="White"
                              Margin="0,0,0,8"
                              Style="{StaticResource MaterialDesignCheckBox}"/>
                    <TextBlock Text="Application will minimize to system tray instead of closing" 
                               Foreground="#777" 
                               FontSize="11" 
                               Margin="30,2,0,8"/>
                    
                    <CheckBox Content="ðŸ› Show console window (Debug Mode)"
                              IsChecked="{Binding ShowConsoleWindow}"
                              Foreground="White"
                              Style="{StaticResource MaterialDesignCheckBox}"/>
                    <TextBlock Text="Show console with debug logs. Requires app restart to take effect." 
                               Foreground="#777" 
                               FontSize="11" 
                               Margin="30,2,0,0"/>
                </StackPanel>
            </Border>

            <!-- Update Settings Section -->
            <Border Background="#2A2A2A" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="ðŸ”„ Update Settings" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                    
                    <TextBlock Text="Update Action" Foreground="#AAA" FontSize="12" Margin="0,0,0,3"/>
                    <ComboBox ItemsSource="{Binding UpdateActions}"
                              SelectedItem="{Binding UpdateAction}"
                              Style="{StaticResource MaterialDesignFilledComboBox}"
                              Foreground="White"
                              Margin="0,0,0,10"/>
                    
                    <TextBlock Foreground="#777" FontSize="11" TextWrapping="Wrap">
                        <Run Text="â€¢ Off:"/>
                        <Run Text="Never check for updates"/>
                        <LineBreak/>
                        <Run Text="â€¢ Notify:"/>
                        <Run Text="Show notification when updates are available"/>
                        <LineBreak/>
                        <Run Text="â€¢ Auto Download:"/>
                        <Run Text="Automatically download and prompt to install"/>
                    </TextBlock>
                </StackPanel>
            </Border>

            <!-- App Info Section -->
            <Border Background="#2A2A2A" CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="â„¹ï¸ Application Information" FontSize="16" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Version:" Foreground="#AAA" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AppVersion}" Foreground="White" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Latest Version:" Foreground="#AAA" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Foreground="#7C4DFF" Margin="0,0,0,8">
                            <Hyperlink NavigateUri="{Binding RepositoryUrl}" Foreground="#7C4DFF">
                                Check for updates
                            </Hyperlink>
                        </TextBlock>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Repository:" Foreground="#AAA" Margin="0,0,0,8"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Foreground="#7C4DFF" Margin="0,0,0,8">
                            <Hyperlink NavigateUri="{Binding RepositoryUrl}" Foreground="#7C4DFF">
                                GitHub Repository
                            </Hyperlink>
                        </TextBlock>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Support:" Foreground="#AAA"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Foreground="#7C4DFF">
                            <Hyperlink NavigateUri="{Binding SupportUrl}" Foreground="#7C4DFF">
                                Get Help &amp; Support
                            </Hyperlink>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Legal Notice Section -->
            <Border Background="#1A1A1A" BorderBrush="#444" BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="âš–ï¸ Legal Notice" FontSize="14" FontWeight="SemiBold" Foreground="#FFB74D" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding LegalNotice}" 
                               Foreground="#999" 
                               FontSize="11" 
                               TextWrapping="Wrap"
                               LineHeight="16"/>
                </StackPanel>
            </Border>

            <!-- Save Button -->
            <Button Content="ðŸ’¾ Save All Settings"
                    Command="{Binding SaveCommand}"
                    Height="40"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,5,0,10"/>

            <TextBlock Text="{Binding Status}" 
                       Foreground="#7C4DFF" 
                       FontWeight="SemiBold" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,20"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
