<UserControl x:Class="VRCGroupTools.Views.MemberBackupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:VRCGroupTools.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             Background="Transparent">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Backup List -->
        <Border Grid.Column="0" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" Text="ðŸ’¾ Member Backups" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1"
                           Text="Save snapshots of all group members for disaster recovery" 
                           FontSize="12" 
                           Foreground="#AAA" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <!-- Create Backup Section -->
                <Border Grid.Row="2" Background="#252526" CornerRadius="6" Padding="15" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Create New Backup" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   Margin="0,0,0,10"/>

                        <TextBox Text="{Binding BackupDescription, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Description (optional)"
                                 Foreground="White"
                                 Margin="0,0,0,10"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                        <Button Content="ðŸ“¸ Create Backup"
                                Command="{Binding CreateBackupCommand}"
                                IsEnabled="{Binding IsCreatingBackup, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="40"/>

                        <!-- Progress -->
                        <StackPanel Visibility="{Binding ShowProgress, Converter={StaticResource BoolToVisibility}}" Margin="0,10,0,0">
                            <TextBlock Foreground="#AAA" FontSize="11" Margin="0,0,0,5">
                                <Run Text="Progress:"/>
                                <Run Text="{Binding ProgressCurrent}"/>
                                <Run Text="/"/>
                                <Run Text="{Binding ProgressTotal}"/>
                            </TextBlock>
                            <ProgressBar Value="{Binding ProgressCurrent}" 
                                         Maximum="{Binding ProgressTotal}" 
                                         Height="4"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Backup List -->
                <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ Saved Backups" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   Margin="0,0,0,10"/>

                        <!-- Loading Indicator -->
                        <ProgressBar IsIndeterminate="True"
                                     Height="4"
                                     Margin="0,10"
                                     Visibility="{Binding IsLoadingBackups, Converter={StaticResource BoolToVisibility}}"/>

                        <ItemsControl ItemsSource="{Binding Backups}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E1E1E" 
                                            CornerRadius="6" 
                                            Padding="12" 
                                            Margin="0,0,0,8"
                                            Cursor="Hand"
                                            MouseLeftButtonUp="BackupItem_Click"
                                            Tag="{Binding}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#2D2D30"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Description}" 
                                                           Foreground="White" 
                                                           FontWeight="SemiBold"
                                                           TextTrimming="CharacterEllipsis"/>
                                                <TextBlock Foreground="#AAA" FontSize="11" Margin="0,3,0,0">
                                                    <Run Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                                                </TextBlock>
                                                <TextBlock Foreground="#AAA" FontSize="11">
                                                    <Run Text="{Binding MemberCount}"/>
                                                    <Run Text="members"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <Button Grid.Column="1"
                                                    Content="ðŸ—‘ï¸"
                                                    Command="{Binding DataContext.DeleteBackupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource MaterialDesignFlatButton}"
                                                    Width="36"
                                                    Height="36"
                                                    Padding="0"
                                                    ToolTip="Delete backup"
                                                    Foreground="#F44336"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- No Backups Message -->
                        <TextBlock Text="No backups found" 
                                   Foreground="#666" 
                                   FontStyle="Italic"
                                   Margin="0,20"
                                   Visibility="{Binding Backups.Count, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Backups.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>

                <!-- Status Message -->
                <Border Grid.Row="4" 
                        Background="#252526" 
                        CornerRadius="6" 
                        Padding="12" 
                        Margin="0,10,0,0"
                        Visibility="{Binding StatusMessage, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="{Binding StatusMessage}" 
                               Foreground="White" 
                               FontSize="11"
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </Border>

        <!-- Right Panel - Backup Details -->
        <Border Grid.Column="1" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="10,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" 
                           Text="Backup Details" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,20"/>

                <!-- Comparison Stats -->
                <Border Grid.Row="1" 
                        Background="#252526" 
                        CornerRadius="6" 
                        Padding="15" 
                        Margin="0,0,0,20"
                        Visibility="{Binding ComparisonResult, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="ðŸ“Š Comparison with Current" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Backup" Foreground="#AAA" FontSize="11"/>
                                <TextBlock Text="{Binding ComparisonResult.BackupMemberCount}" 
                                           Foreground="White" 
                                           FontSize="24" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="members" Foreground="#AAA" FontSize="11"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Current" Foreground="#AAA" FontSize="11"/>
                                <TextBlock Text="{Binding ComparisonResult.CurrentMemberCount}" 
                                           Foreground="White" 
                                           FontSize="24" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="members" Foreground="#AAA" FontSize="11"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="Missing" Foreground="#AAA" FontSize="11"/>
                                <TextBlock Text="{Binding ComparisonResult.MissingMemberCount}" 
                                           Foreground="#F44336" 
                                           FontSize="24" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="members" Foreground="#AAA" FontSize="11"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3">
                                <TextBlock Text="New" Foreground="#AAA" FontSize="11"/>
                                <TextBlock Text="{Binding ComparisonResult.NewMemberCount}" 
                                           Foreground="#4CAF50" 
                                           FontSize="24" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="members" Foreground="#AAA" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Restore Controls -->
                <Border Grid.Row="2" 
                        Background="#252526" 
                        CornerRadius="6" 
                        Padding="15" 
                        Margin="0,0,0,20"
                        Visibility="{Binding SelectedBackup, Converter={StaticResource BoolToVisibility}}">
                    <StackPanel>
                        <TextBlock Text="ðŸ”„ Restore Members" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   Margin="0,0,0,10"/>

                        <Button Content="ðŸ” Check Missing Members"
                                Command="{Binding CompareWithCurrentCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Height="40"
                                Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Only restore missing members" 
                                           Foreground="White" 
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="Skip members who are already in the group" 
                                           FontSize="11" 
                                           Foreground="#AAA" 
                                           Margin="0,3,0,0"/>
                            </StackPanel>

                            <ToggleButton Grid.Column="1" 
                                          IsChecked="{Binding OnlyRestoreMissing}"
                                          Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          VerticalAlignment="Center"/>
                        </Grid>

                        <Button Content="ðŸ“¨ Restore Backup (Send Invites)"
                                Command="{Binding RestoreBackupCommand}"
                                IsEnabled="{Binding IsRestoringBackup, Converter={StaticResource BoolToVisibility}, ConverterParameter=Invert}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="45"
                                FontSize="14"
                                FontWeight="SemiBold"/>

                        <TextBlock Text="Rate-limited automatically to protect your account"
                                   Foreground="#AAA"
                                   FontSize="11"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Members List -->
                <Border Grid.Row="3" Background="#252526" CornerRadius="6" Padding="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="ðŸ‘¥ Backup Members" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="White" 
                                   Margin="0,0,0,10"/>

                        <!-- Loading Indicator -->
                        <ProgressBar Grid.Row="1"
                                     IsIndeterminate="True"
                                     Height="4"
                                     VerticalAlignment="Top"
                                     Margin="0,10"
                                     Visibility="{Binding IsLoadingMembers, Converter={StaticResource BoolToVisibility}}"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding BackupMembers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1E1E1E" 
                                                CornerRadius="6" 
                                                Padding="12" 
                                                Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Avatar -->
                                                <Border Grid.Column="0"
                                                        Width="40" 
                                                        Height="40" 
                                                        CornerRadius="20" 
                                                        ClipToBounds="True"
                                                        Margin="0,0,12,0">
                                                    <Border.Background>
                                                        <ImageBrush ImageSource="{Binding ProfilePicUrl}" Stretch="UniformToFill"/>
                                                    </Border.Background>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding ProfilePicUrl}" Value="{x:Null}">
                                                                    <Setter Property="Background" Value="#7C4DFF"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                </Border>

                                                <!-- Info -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding DisplayName}" 
                                                               Foreground="White" 
                                                               FontWeight="SemiBold"/>
                                                    <TextBlock Foreground="#AAA" FontSize="11">
                                                        <Run Text="{Binding RoleNames}"/>
                                                    </TextBlock>
                                                    <TextBlock Foreground="#666" FontSize="10">
                                                        <Run Text="Joined:"/>
                                                        <Run Text="{Binding JoinedAt, StringFormat='{}{0:yyyy-MM-dd}'}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Status Badges -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Border Background="#F44336" 
                                                            CornerRadius="3" 
                                                            Padding="6,3"
                                                            Margin="5,0"
                                                            Visibility="{Binding IsMissing, Converter={StaticResource BoolToVisibility}}">
                                                        <TextBlock Text="MISSING" 
                                                                   Foreground="White" 
                                                                   FontSize="10"
                                                                   FontWeight="Bold"/>
                                                    </Border>

                                                    <Border Background="#4CAF50" 
                                                            CornerRadius="3" 
                                                            Padding="6,3"
                                                            Visibility="{Binding WasReInvited, Converter={StaticResource BoolToVisibility}}">
                                                        <TextBlock Text="âœ“ RE-INVITED" 
                                                                   Foreground="White" 
                                                                   FontSize="10"
                                                                   FontWeight="Bold"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <!-- No Selection Message -->
                        <StackPanel Grid.Row="1"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Visibility="{Binding SelectedBackup, Converter={StaticResource BoolToVisibility}}">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedBackup}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SelectedBackup}" Value="{x:Static sys:String.Empty}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="ðŸ“¦" 
                                       FontSize="64" 
                                       HorizontalAlignment="Center" 
                                       Opacity="0.3"/>
                            <TextBlock Text="Select a backup to view details" 
                                       Foreground="#666" 
                                       FontSize="14"
                                       HorizontalAlignment="Center"
                                       Margin="0,10,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
