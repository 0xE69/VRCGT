<UserControl x:Class="VRCGroupTools.Views.KillSwitchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Vertical" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ðŸš¨" FontSize="28" VerticalAlignment="Center"/>
                <TextBlock Text=" Emergency Kill Switch" FontSize="24" FontWeight="Bold" Foreground="#F44336" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBlock Text="Remove ALL staff roles instantly in case of emergency. Role assignments are saved for quick restoration." 
                       Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0">
            
            <!-- Tab 1: Kill Switch -->
            <TabItem Header="âš¡ Kill Switch" Foreground="White">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="ðŸ”„ Load Members With Roles"
                                Command="{Binding LoadMembersWithRolesCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                                Background="#7C4DFF"
                                Height="40" Padding="20,0"/>
                        <Button Content="Select All" Command="{Binding SelectAllMembersCommand}"
                                Margin="10,0,0,0" Height="40"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                        <Button Content="Deselect All" Command="{Binding DeselectAllMembersCommand}"
                                Margin="10,0,0,0" Height="40"
                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                    </StackPanel>

                    <!-- Stats -->
                    <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Margin="0,0,30,0">
                                <TextBlock Text="Members with Roles" Foreground="#888" FontSize="11"/>
                                <TextBlock Text="{Binding TotalMembersWithRoles}" Foreground="White" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                            <StackPanel Margin="0,0,30,0">
                                <TextBlock Text="Total Role Assignments" Foreground="#888" FontSize="11"/>
                                <TextBlock Text="{Binding TotalRoleAssignments}" Foreground="#F44336" FontSize="24" FontWeight="Bold"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Status}" Foreground="#7C4DFF" VerticalAlignment="Center" FontSize="13"/>
                        </StackPanel>
                    </Border>

                    <!-- Role Filter -->
                    <Border Grid.Row="2" Background="#2D2D30" CornerRadius="8" Padding="12" Margin="0,0,0,15">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="ðŸŽ¯ Roles to Remove" Foreground="White" FontWeight="SemiBold"/>
                                <TextBlock Text=" (leave all checked to remove all roles)" Foreground="#888" Margin="6,0,0,0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Button Content="Select All Roles" Command="{Binding SelectAllRolesCommand}"
                                        Height="30" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                                <Button Content="Deselect All Roles" Command="{Binding DeselectAllRolesCommand}"
                                        Margin="10,0,0,0" Height="30" Style="{StaticResource MaterialDesignOutlinedButton}"/>
                            </StackPanel>
                            <ItemsControl ItemsSource="{Binding RoleSelections}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding Name}"
                                                  IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                  Foreground="White"
                                                  Margin="0,0,12,6"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Members List -->
                    <Border Grid.Row="3" Background="#2D2D30" CornerRadius="8" Padding="0">
                        <DataGrid ItemsSource="{Binding MembersWithRoles}"
                                  AutoGenerateColumns="False"
                                  HeadersVisibility="Column"
                                  CanUserAddRows="False"
                                  CanUserDeleteRows="False"
                                  IsReadOnly="True"
                                  Background="Transparent"
                                  RowBackground="#2D2D30"
                                  AlternatingRowBackground="#252528"
                                  Foreground="White"
                                  GridLinesVisibility="None"
                                  BorderThickness="0">
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Header="âœ“" Width="50">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="*"/>
                                <DataGridTextColumn Header="User ID" Binding="{Binding UserId}" Width="*"/>
                                <DataGridTextColumn Header="Roles" Binding="{Binding RoleSummary}" Width="2*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    <!-- Kill Switch Button -->
                    <Grid Grid.Row="4" Margin="0,15,0,0">
                        <Button Content="ðŸš¨ REMOVE ALL SELECTED ROLES ðŸš¨"
                                Command="{Binding ShowConfirmCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Height="60"
                                FontSize="18"
                                FontWeight="Bold"
                                Background="#D32F2F"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}">
                            <Button.Effect>
                                <DropShadowEffect Color="#F44336" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                            </Button.Effect>
                        </Button>

                        <!-- Progress Overlay -->
                        <Border Background="#D32F2F" CornerRadius="4" Padding="15"
                                Visibility="{Binding IsRemoving, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="{Binding ProgressText}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <ProgressBar Value="{Binding ProgressCurrent}" Maximum="{Binding ProgressTotal}"
                                             Margin="0,10,0,0" Height="8" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Tab 2: Restore Roles -->
            <TabItem Header="ðŸ”„ Restore Roles" Foreground="White">
                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Load Snapshots -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="ðŸ”„ Load Snapshots"
                                Command="{Binding LoadSnapshotsCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Style="{StaticResource MaterialDesignRaisedDarkButton}" 
                                Background="#7C4DFF"
                                Height="40" Padding="20,0"/>
                        <TextBlock Text="{Binding Status}" Foreground="#7C4DFF" VerticalAlignment="Center" Margin="15,0,0,0"/>
                    </StackPanel>

                    <!-- Snapshots List -->
                    <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Snapshots}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#252528" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Grid.Column="0">
                                                    <TextBlock Text="{Binding CreatedAt, StringFormat='ðŸ“… {0:yyyy-MM-dd HH:mm:ss}'}" 
                                                               Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="ðŸ‘¥ " Foreground="#888"/>
                                                        <TextBlock Text="{Binding TotalUsers}" Foreground="#7C4DFF" FontWeight="Bold"/>
                                                        <TextBlock Text=" users  â€¢  " Foreground="#888"/>
                                                        <TextBlock Text="ðŸ·ï¸ " Foreground="#888"/>
                                                        <TextBlock Text="{Binding TotalRoles}" Foreground="#F44336" FontWeight="Bold"/>
                                                        <TextBlock Text=" roles  â€¢  " Foreground="#888"/>
                                                        <TextBlock Text="âœ… " Foreground="#888"/>
                                                        <TextBlock Text="{Binding RestoredCount}" Foreground="#4CAF50" FontWeight="Bold"/>
                                                        <TextBlock Text=" restored" Foreground="#888"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding SnapshotId}" Foreground="#555" FontSize="10" Margin="0,5,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <Button Content="ðŸ”„ Restore"
                                                            Command="{Binding DataContext.OpenRestorePanelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                                            Background="#4CAF50"
                                                            Height="36" Margin="0,0,10,0"/>
                                                    <Button Content="ðŸ—‘ï¸"
                                                            Command="{Binding DataContext.DeleteSnapshotCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Style="{StaticResource MaterialDesignFlatButton}"
                                                            Foreground="#F44336"
                                                            Height="36" Width="36"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Confirmation Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000" 
                Visibility="{Binding ShowConfirmPanel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#1E1E1E" CornerRadius="12" Padding="30" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MaxWidth="500">
                <StackPanel>
                    <TextBlock Text="âš ï¸ CONFIRM KILL SWITCH" 
                               Foreground="#F44336" FontSize="24" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    
                    <TextBlock TextWrapping="Wrap" Foreground="White" FontSize="14" Margin="0,0,0,20">
                        You are about to remove ALL selected roles from the group.
                        <LineBreak/><LineBreak/>
                        This action will:
                        <LineBreak/>â€¢ Save a snapshot of current role assignments
                        <LineBreak/>â€¢ Remove selected roles from selected members
                        <LineBreak/><LineBreak/>
                        You can restore roles later using the saved snapshot.
                    </TextBlock>

                    <Border Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Foreground="#F44336" FontWeight="Bold">
                                <Run Text="Members affected: "/>
                                <Run Text="{Binding SelectedMembersCount, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Foreground="#F44336" FontWeight="Bold" Margin="0,5,0,0">
                                <Run Text="Roles to remove: "/>
                                <Run Text="{Binding SelectedRoleAssignmentsToRemove, Mode=OneWay}"/>
                            </TextBlock>
                            <TextBlock Foreground="#888" Margin="0,5,0,0">
                                <Run Text="Role filters selected: "/>
                                <Run Text="{Binding SelectedRolesCount, Mode=OneWay}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Cancel"
                                Command="{Binding CancelConfirmCommand}"
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                Width="120" Height="40" Margin="0,0,15,0"/>
                        <Button Content="ðŸš¨ EXECUTE"
                                Command="{Binding ExecuteKillSwitchCommand}"
                                Background="#D32F2F"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Width="140" Height="40" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        <!-- Restore Panel Overlay -->
        <Border Grid.RowSpan="2" Background="#80000000" 
                Visibility="{Binding ShowRestorePanel, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20" 
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    MaxWidth="700" MaxHeight="600">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <Grid>
                            <TextBlock Text="ðŸ”„ Restore Roles" Foreground="White" FontSize="20" FontWeight="Bold"/>
                            <Button Content="âœ•" HorizontalAlignment="Right"
                                    Command="{Binding CloseRestorePanelCommand}"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Foreground="#888" Width="30" Height="30"/>
                        </Grid>
                        <TextBlock Text="{Binding SelectedSnapshot.DisplayText}" Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Users and Roles List -->
                    <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                            <ItemsControl ItemsSource="{Binding SnapshotUsers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#252528" CornerRadius="8" Margin="0,0,0,10" Padding="12">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding DisplayName}" Foreground="White" 
                                                               FontWeight="SemiBold" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding UserId}" Foreground="#555" 
                                                               FontSize="10" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                
                                                <ItemsControl ItemsSource="{Binding Roles}" Margin="30,8,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,2">
                                                                <CheckBox IsChecked="{Binding IsSelected}" 
                                                                          IsEnabled="{Binding IsRestored, Converter={StaticResource InverseBooleanConverter}}"
                                                                          VerticalAlignment="Center"/>
                                                                <TextBlock Text="{Binding RoleName}" Margin="8,0,0,0" VerticalAlignment="Center">
                                                                    <TextBlock.Style>
                                                                        <Style TargetType="TextBlock">
                                                                            <Setter Property="Foreground" Value="#CCC"/>
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding IsRestored}" Value="True">
                                                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                                                </DataTrigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </TextBlock.Style>
                                                                </TextBlock>
                                                                <TextBlock Text=" âœ“ Restored" Foreground="#4CAF50" FontSize="10"
                                                                           Margin="10,0,0,0" VerticalAlignment="Center"
                                                                           Visibility="{Binding IsRestored, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <!-- Restore Button -->
                    <Grid Grid.Row="2" Margin="0,15,0,0">
                        <Button Content="ðŸ”„ Restore Selected Roles"
                                Command="{Binding RestoreRolesCommand}"
                                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                                Background="#4CAF50"
                                Foreground="White"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Height="45" FontWeight="Bold"/>

                        <!-- Progress Overlay -->
                        <Border Background="#4CAF50" CornerRadius="4" Padding="12"
                                Visibility="{Binding IsRestoring, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="{Binding ProgressText}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <ProgressBar Value="{Binding ProgressCurrent}" Maximum="{Binding ProgressTotal}"
                                             Margin="0,8,0,0" Height="6" Foreground="White"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
