<Window x:Class="VRCGroupTools.Views.UpdatePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Update Available" 
        Height="280" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#1E1E1E"
        AllowsTransparency="True">
    
    <Border BorderBrush="#7C4DFF" BorderThickness="2" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#7C4DFF" CornerRadius="6,6,0,0" Padding="20">
                <StackPanel>
                    <TextBlock Text="ðŸš€ Update Available" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="A new version of VRC Group Tools is ready to install" 
                               FontSize="12" 
                               Foreground="#E0E0E0" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="30,25,30,15">
                <Border Background="#2D2D30" CornerRadius="6" Padding="20" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Current Version:" Foreground="#AAA" FontSize="14" Margin="0,0,15,8"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentVersion}" Foreground="White" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="New Version:" Foreground="#AAA" FontSize="14" Margin="0,0,15,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LatestVersion}" Foreground="#4CAF50" FontSize="14" FontWeight="Bold"/>
                    </Grid>
                </Border>
                
                <TextBlock Text="The update will be downloaded and installed automatically. The application will restart after installation." 
                           TextWrapping="Wrap" 
                           Foreground="#999" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"/>
            </StackPanel>
            
            <!-- Buttons -->
            <Grid Grid.Row="2" Background="#252526">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,15">
                    <Button Content="Update Now" 
                            Width="180"
                            Height="45"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Margin="0,0,10,0"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#4CAF50"
                            Click="UpdateButton_Click"/>
                    
                    <Button Content="Later" 
                            Width="180"
                            Height="45"
                            FontSize="15"
                            Margin="10,0,0,0"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Click="LaterButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>
